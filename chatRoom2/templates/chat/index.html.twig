{% extends 'base.html.twig' %}

{% block title %}Chats Disponibles{% endblock %}

{% block body %}
    <!-- Barra de navegaci贸n fija -->
    <nav>
        <a href="{{ path('app_chat_new') }}" class="btn btn-nav">Crear Nuevo Grupo</a>
        <a href="{{ path('app_logout') }}" class="btn btn-nav">Salir</a>
    </nav>

    <div class="container">
        <h1>Chats</h1>

        <div class="chat-list">
            {% if chats is empty %}
                <p>No hay chats disponibles.</p>
            {% else %}
                {% for chat in chats %}
                    <div class="chat-card">
                        <a href="{{ path('app_chat_show', {'id': chat.id}) }}" class="chat-name">{{ chat.name }}</a>
                        <a href="{{ path('app_chat_exit', {'id': chat.id}) }}" class="btn btn-delete">Salir</a>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <style>
        /* Barra de navegaci贸n fija */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color:rgb(81, 155, 155);
            padding: 10px 0;
            display: flex;
            justify-content: space-around;
            z-index: 1000;
        }

        nav a {
            text-decoration: none;
            color: white;
            font-size: 16px;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background 0.3s;
        }

        nav a:hover {
            background-color: rgb(60, 113, 113);
        }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f5f5f5;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            height: 100vh;
            padding-top: 60px;
        }

        .container {
            padding: 20px;
            width: 90%;
            max-width: 800px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: rgb(81, 155, 155)
            text-align: center;
        }

        /* Lista de chats */
        .chat-list {
            display: flex;
            flex-direction: column;
            gap: 10px;
            width: 100%;
        }

        /* Tarjetas de chat */
        .chat-card {
            background: rgb(81, 155, 155);
            padding: 15px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
            width: 100%;
            height: 40px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-decoration: none;
            transition: background 0.3s;
        }

        .chat-card:hover {
            background: rgb(63, 122, 122)
        }

        /* Nombre del chat */
        .chat-name {
            font-size: 18px;
            font-weight: bold;
            flex-grow: 1;
            padding-left: 10px;
            color: white;
            text-decoration: none;
        }

        .chat-name:hover {
            text-decoration: underline;
        }

        /* Bot贸n de eliminaci贸n en rojo */
        .btn-delete {
            background: rgb(255, 0, 25);
            color: white;
            padding: 10px;
            border-radius: 15px;
            display: flex;
            width: 50px;
            align-items: center;
            justify-content: center;
         
            text-decoration: none;
            position: relative;
            z-index: 10;
            transition: background 0.3s ease-in-out;
        }

        .btn-delete:hover {
            background: rgb(200, 35, 51);
        }
    </style>
{% endblock %}